<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> <br>
        <%= @user.email %><br>
        <%= @user.role %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
     <section class="request_form opaque">
          <%= render 'shared/request_form' %>
        </section>
  </aside>
    <div class="col-md-8">

    <%= render 'watch_form' if logged_in? %>
    <% if @user.requests.any? %>
    <div class="opaque">
      <h3>My Requests (<%= @user.requests.count %>)</h3>
      <ol class="requests">
        <%= render @requests %>
      </ol>
      <%= will_paginate @requests %>
    </div>
    <% end %>
    <div class="opaque">
      <div class="col-md-8">
      <h3>Request Watchlist</h3>
      <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
</div>
