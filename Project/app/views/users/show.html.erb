<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> <br>
        <%= @user.email %><br>
        <%= @user.role.capitalize %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
    <div class="col-md-8">
    <%= render 'watch_form' if logged_in? %>
    <% if @user.requests.any? %>
      <h3>Requests (<%= @user.requests.count %>)</h3>
      <ol class="requests">
        <%= render @requests %>
      </ol>
      <%= will_paginate @requests %>
    <% end %>
  </div>
</div>
